{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "checkJs": false,
    "baseUrl": "./",
    "paths": {
      "rootDir/*": ["/*"],
      "src/*": ["src/*"],
      "common/*": ["src/common/*"],
      "components/*": ["src/components/*"],
      "pages/*": ["src/pages/*"],
      "assets/*": ["src/assets/*"],
      "partials/*": ["src/components/partials/*"]
    },
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "node_modules/", "build", "dist"]
}
